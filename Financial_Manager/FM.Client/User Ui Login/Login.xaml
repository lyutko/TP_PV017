<Window x:Class="Financial_Manager.User_Ui_Login.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Financial_Manager.User_Ui_Login"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="500" MaxHeight="600" MaxWidth="600">
    <Grid>
        <StackPanel>
            <Border Margin="120,30" MinHeight="300" CornerRadius="8" Background="#edeff2">
                <StackPanel>
                    <Label FontSize="15" Content="Логін" HorizontalAlignment="Center" Margin="0,10"></Label>
                    <Label Content="Ім'я" Margin="30,00"></Label>
                    <TextBox Margin="30,00"></TextBox>
                    <Label Content="Пароль" Margin="30,00"></Label>
                    <TextBox Margin="30,00"></TextBox>
                    <Button MinHeight="30" Content="Ввійти" Margin="30,20"></Button>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
