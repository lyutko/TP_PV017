<Page x:Class="Financial_Manager.ConfigurationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Financial_Manager"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400"
      Title="ConfigurationPage">
    <Grid Background="#ffdadada">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="375"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid x:Name="toolbar" Grid.Row="0"  Background="#FF673AB7" >

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                <Image x:Name="minbut" Width="15" Height="15" MouseDown="minbut_MouseDown" Margin="5,5,10,5" >
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="Icons\NotActiveFolding.png"></Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMouseOver,ElementName = minbut}" Value="true">
                                    <Setter Property="Source" Value="Icons\ActiveFolding.png"></Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                    <Image.Effect>
                        <BlurEffect Radius="2"></BlurEffect>
                    </Image.Effect>
                </Image>
                <Image x:Name="crosbut" Width="15" Height="15" Margin="5" MouseDown="crosbut_MouseDown">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="Icons\NotActiveCross.png"></Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMouseOver,ElementName = crosbut}" Value="true">
                                    <Setter Property="Source" Value="Icons\ActiveCross.png"></Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                    <Image.Effect>
                        <BlurEffect Radius="2"></BlurEffect>
                    </Image.Effect>
                </Image>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">

            <StackPanel MinWidth="100" Margin="5,10,5,10"  VerticalAlignment="Center" Height="350" Grid.ColumnSpan="2">
                <Image VerticalAlignment="Top" Margin="50,20,50,20" Height="120" Source="Icons\FinancialManagerLogo.jpg"/>
                
                <StackPanel x:Name="CurrencyStackPanel" Height="40" Width="310" HorizontalAlignment="Left"  Margin="35,10,10,10" Orientation="Horizontal">
                    <Label   Content="Currency : " Style="{StaticResource MaterialDesignLabel}" Margin="0,7,250,5"/>
                    <Button  Width="65" Height="30" Content="USD" Margin="-400,5,0,5"/>
                    <Button  Width="65" Height="30" Content="EUR" Margin="-250,5,0,5"/>
                    <Button  Width="65" Height="30" Content="UAH" Margin="-100,5,0,5"/>
                </StackPanel>
                <Button x:Name="SignUpButton" Click="SignUpButton_Click" Content="Sign Up"  Margin="35,10,35,0" Width="250" Cursor="Hand" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
